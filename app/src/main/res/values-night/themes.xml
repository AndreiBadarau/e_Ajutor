<!-- Dark theme -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.EAjutor" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/colorErrorBackground</item>
        <item name="colorOnErrorContainer">@color/colorError</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.EAjutor.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.EAjutor.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.EAjutor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
