<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light mode) -->
    <style name="Theme.EAjutor" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item> <!-- Consider mapping to colorPrimaryContainer or similar M3 role -->
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item> <!-- Consider mapping to colorSecondaryContainer -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- Error colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/colorErrorBackground</item>
        <item name="colorOnErrorContainer">@color/colorError</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Define action bar theme attributes for the main theme -->
        <!-- This will be inherited by Toolbars unless they specify their own android:theme -->
        <item name="actionBarTheme">@style/Theme.EAjutor.AppBarOverlay</item>
        <item name="actionBarPopupTheme">@style/Theme.EAjutor.PopupOverlay</item>

    </style>

    <!-- AppBarOverlay: Used for the AppBar/Toolbar itself -->
    <!-- Option 1: If your Toolbar background (colorPrimary) is DARK -->
    <style name="Theme.EAjutor.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <!-- This ensures text/icons on the Toolbar are light (e.g., white) -->
        <!-- You can further customize Toolbar text appearance here if needed -->
        <!-- <item name="android:textColorPrimary">@color/white</item> -->
    </style>

    <!-- Option 2: If your Toolbar background (colorPrimary) is LIGHT -->
    <!--
    <style name="Theme.EAjutor.AppBarOverlay" parent="ThemeOverlay.Material3.Light.ActionBar">
    -->
    <!-- This ensures text/icons on the Toolbar are dark -->
    <!--
    </style>
    -->

    <!-- PopupOverlay: Used for the Toolbar's overflow popup menu -->
    <style name="Theme.EAjutor.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
    <!-- This makes the background of the popup menu light and the text dark. -->

    <!-- This style is redundant if Theme.EAjutor is always your app theme and is NoActionBar -->
    <!-- <style name="Theme.EAjutor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style> -->
</resources>