<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.MainUserActivity">

    <!-- First Name -->
    <TextView
        android:id="@+id/textViewFirstNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nume:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textViewFirstNameLabel"
        app:layout_constraintEnd_toStartOf="@id/buttonEditName"
        app:layout_constraintStart_toEndOf="@id/textViewFirstNameLabel"
        tools:text="John" />

    <ImageButton
        android:id="@+id/buttonEditName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Edit Name"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintBottom_toBottomOf="@id/textViewFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewFirstName" />


    <!-- Last Name -->
    <TextView
        android:id="@+id/textViewLastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Prenume:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFirstNameLabel" />

    <TextView
        android:id="@+id/textViewLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textViewLastNameLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewLastNameLabel"
        tools:text="Doe" />


    <!-- Email -->
    <TextView
        android:id="@+id/textViewEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLastNameLabel" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textViewEmailLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewEmailLabel"
        tools:text="john.doe@example.com" />

    <!-- Phone -->
    <TextView
        android:id="@+id/textViewPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Numar de telefon:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEmailLabel" />

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/textViewPhoneLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewPhoneLabel"
        tools:text="0123456789" />

    <!-- Placeholder for "2FA" (we'll implement later) -->
    <Button
        android:id="@+id/buttonSetup2FA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Setup 2-Factor Authentication"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPhone" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchBiometricLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enable Biometric Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSetup2FA" />


    <Button
        android:id="@+id/buttonSignOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:backgroundTint="@color/design_default_color_error"
        android:text="Sign Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/operatorLocationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignOut"
        app:layout_constraintTop_toBottomOf="@+id/switchBiometricLogin"
        tools:layout_editor_absoluteX="16dp"
        tools:visibility="gone"> <!-- tools:visibility makes it visible in layout editor -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Your Service Area"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutOperatorAddress"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Enter Service Address or City">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/editTextOperatorAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:completionThreshold="1"
                android:hint="Enter Service Address"
                android:inputType="textPostalAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonSaveOperatorLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save Service Location" />

        <TextView
            android:id="@+id/textViewCurrentOperatorLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Current Service Location: Not Set"
            android:textAppearance="?attr/textAppearanceBody2" />

        <Button
            android:id="@+id/buttonUseCurrentGpsForOperator"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Use My Current GPS Location" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/userAddressSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignOut"
        app:layout_constraintTop_toBottomOf="@+id/switchBiometricLogin"
        tools:layout_editor_absoluteX="16dp"
        tools:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Residential Address"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutUserAddress"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Enter Home Address">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/editTextUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Home Address"
                android:inputType="textPostalAddress"
                android:completionThreshold="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonSaveUserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save My Address" />

        <TextView
            android:id="@+id/textViewCurrentUserLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Current Home Location: Not Set"
            android:textAppearance="?attr/textAppearanceBody2" />

        <Button
            android:id="@+id/buttonUseCurrentGpsForUser"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Use My Current GPS Location" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

