<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingStart="40dp"
    android:paddingTop="4dp"
    android:paddingEnd="8dp"
    android:paddingBottom="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_message_bubble_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.ChatMessage.Sent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_chat_message_text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?attr/colorOnPrimary"
                tools:text="This is a message from the current user. It can be a bit longer to test wrapping." />

            <TextView
                android:id="@+id/textView_chat_message_timestamp_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:alpha="0.7"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="10sp"
                tools:text="10:30 AM" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>