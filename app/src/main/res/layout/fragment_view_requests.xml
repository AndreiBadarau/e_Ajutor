<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.viewRequests.ViewRequestsFragment">

    <!-- This LinearLayout groups the tabs and the list content -->
    <LinearLayout
        android:id="@+id/list_content_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- app:layout_behavior="@string/appbar_scrolling_view_behavior" would typically be on a direct child of CoordinatorLayout that's scrollable below an AppBarLayout.
             If the Activity has the AppBar, this behavior tag might not be needed here, or the root of this fragment (CoordinatorLayout) might be what scrolls if the activity's content can scroll.
             For simplicity, we'll assume the fragment's content fits or the RecyclerView handles its own scrolling. -->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabGravity="fill"
            android:background="?attr/colorSurface"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_requests"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                tools:listitem="@layout/request_item_layout" />

            <ProgressBar
                android:id="@+id/progressBar_requests"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/textView_empty_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/no_requests_found"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:visibility="gone"
                tools:visibility="visible"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- Included Detail View Content -->
    <include
        android:id="@+id/detail_content"
        layout="@layout/layout_request_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>